{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "react/jsx-boolean-value": [2, "always"],
    "react/jsx-curly-spacing": [2, "always"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "react/prefer-stateless-function": [0]
  }
}
